<html>
<head>
  <title>Gomega Browser Launcher</title>
  <HTA:APPLICATION
    ID="GomegaBrowser" APPLICATIONNAME="Gomega Browser"
    BORDER="dialog" CAPTION="yes" SHOWINTASKBAR="yes"
    SINGLEINSTANCE="yes" SYSMENU="yes" SCROLL="no" WINDOWSTATE="normal">
<script language="VBScript">
Option Explicit

' Simple, non-obfuscated launcher: locate Chrome (or a packaged exe) and open the site.
' No network calls, no custom UA, no version checks, no hidden behavior.

Dim chromePaths, g_gomegaExe, targetURL
chromePaths = Array( _
  "C:\Program Files\Google\Chrome\Application\chrome.exe", _
  "C:\Program Files (x86)\Google\Chrome\Application\chrome.exe" _
)
g_gomegaExe = "C:\Program Files\GomegaBrowser\GomegaBrowser.exe"
targetURL = "https://gomega.watch"

Dim fso, shell, chromePath, idx, candidate
Set fso = CreateObject("Scripting.FileSystemObject")
Set shell = CreateObject("WScript.Shell")

chromePath = ""

' Locate a standard Chrome install
For idx = 0 To UBound(chromePaths)
  candidate = chromePaths(idx)
  If fso.FileExists(candidate) Then
    chromePath = candidate
    Exit For
  End If
Next

' Fallback to packaged exe if present
If chromePath = "" Then
  If fso.FileExists(g_gomegaExe) Then
    chromePath = g_gomegaExe
  End If
End If

' Launch or show clear instructions
If chromePath <> "" Then
  ' Open single, user-visible URL using the system's Chrome (no unusual flags)
  shell.Run """" & chromePath & """ " & """" & targetURL & """", 1, False
Else
  MsgBox "Could not find Google Chrome or the packaged GomegaBrowser.exe." & vbCrLf & _
         "Please install Chrome or place GomegaBrowser.exe at: " & vbCrLf & g_gomegaExe, vbExclamation, "Launcher Error"
End If

' Cleanup
Set fso = Nothing
Set shell = Nothing
</script>
</head>
<body>
  <div style="font-family:Segoe UI, Arial, sans-serif; padding:18px;">
    <h3>Launching Gomega Browser...</h3>
    <p>If nothing happens, please install Google Chrome or check the path to GomegaBrowser.exe.</p>
  </div>
</body>
</html>
